{
  "functions": {},
  "hosting": [
    {
      "target": "prod",
      "public": "client/build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "/api",
          "function": "api"
        }
      ]
    },
    {
      "target": "dev",
      "public": "client/build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
